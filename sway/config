# i3 config file (v5)
#
# <fmount>
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod1
show_marks yes

# DIRECTIONS
set $up k
set $down j
set $left h
set $right l

#Set workspace name and icons
set $ws0 0
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9

set $fp pango: NeoSpleen 11
font $fp

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+F4 kill

# start wmenu (replaces dmenu)
bindsym $mod+F2 exec wmenu-run

# change focus
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+$left focus left

# alternatively, use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$left move left

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
#bindsym $mod+h split h

# split in vertical orientation
#bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

#bindsym $mod+h exec xrandr --output DP-2 --auto --left-of eDP-1
#xrandr --output eDP-1 --off
# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+d focus child


# move the currently focused window to scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

# switch to workspace
bindsym $mod+0 workspace $ws0
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# move focused container to workspace
bindsym $mod+Shift+0 move container to workspace $ws0
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

# reload the configuration file
bindsym $mod+Shift+c reload;
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

bindsym XF86AudioRaiseVolume exec pactl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioLowerVolume exec pactl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

# Brightness controls - using brightnessctl (Wayland compatible)
bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

#Print screen
bindsym XF86Search exec maim $HOME/screens/`date +%Y-%m-%d_%H:%M:%S`.jpg

#DOCK PANIC BUTTON
bindsym Ctrl+F7 exec $HOME/dotfiles/scripts/i3scripts/dockland.sh "panic"

# Exit Menu
set $mode_display System (d) dock, (u) undock, (t) together, (r) duplicate, (e) external

mode "$mode_display" {
    bindsym d exec --no-startup-id $HOME/dotfiles/scripts/i3scripts/dockland.sh "dock", mode "default"
    bindsym u exec --no-startup-id $HOME/dotfiles/scripts/i3scripts/dockland.sh "undock", mode "default"
    bindsym t exec --no-startup-id $HOME/dotfiles/scripts/i3scripts/dockland.sh "together" "right", mode "default"
    bindsym r exec --no-startup-id $HOME/dotfiles/scripts/i3scripts/dockland.sh "duplicate", mode "default"
    #bindsym e exec --no-startup-id $HOME/dotfiles/scripts/i3scripts/dock.sh "external", mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Exit Menu
set $mode_system System (l) lock, (e) logout, (x) suspend, (r) reboot, (s) shutdown


mode "$mode_system" {
    bindsym l exec --no-startup-id swaylock -c 0x000000
    bindsym e exec --no-startup-id swaymsg exit, mode "default"
    bindsym x exec --no-startup-id swaylock -c 0x000000 & sleep 1 && systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym XF86PowerOff mode "$mode_system"
bindsym XF86Explorer mode "$mode_system"
bindsym F8 mode "$mode_system"
bindsym F7 mode "$mode_display"

#bindsym Shift+Mod1+l exec loginctl lock-session

# resize window (you can also use the mouse for that)
mode "resize" {

    bindsym $left       resize shrink width 10 px or 10 ppt
    bindsym $down       resize grow height 10 px or 10 ppt
    bindsym $up         resize shrink height 10 px or 10 ppt
    bindsym $right      resize grow width 10 px or 10 ppt

# Speedup resize
    bindsym Shift+$left       resize shrink width 70 px or 70 ppt
    bindsym Shift+$down       resize grow height 70 px or 70 ppt
    bindsym Shift+$up         resize shrink height 70 px or 70 ppt
    bindsym Shift+$right      resize grow width 70 px or 70 ppt

# same bindings, but for the arrow keys
    bindsym Left        resize shrink width 10 px or 10 ppt
    bindsym Down        resize grow height 10 px or 10 ppt
    bindsym Up          resize shrink height 10 px or 10 ppt
    bindsym Right       resize grow width 10 px or 10 ppt

# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


bindsym $mod+r mode "resize"

# Assigning applications
#for_window [class="Spotify"] move to workspace $ws5
for_window [class="(?i)keybase"] move to scratchpad
assign [class="Firefox"] $ws1
assign [class="Thunderbird"] $ws2
assign [class="(?i)qutebrowser"] $ws1

# Disable focus following mouse movement
focus_follows_mouse no
workspace_layout tabbed

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    swaybar_command waybar
    position top
    workspace_buttons yes
    mode dock
    #output               HDMI2
    #output               VGA1
    #mode                 hide
    #workspace_buttons    yes
    tray_output          eDP1
    binding_mode_indicator yes

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }

}

# Idle and lock configuration (replaces xss-lock)
exec swayidle -w \
    timeout 300 'swaylock -f -c 0x000000' \
    timeout 600 'swaymsg "output * power off"' \
    resume 'swaymsg "output * power on"' \
    before-sleep '/bin/bash -c "(killall dunst; killall -9 gpg-agent; gpg-connect-agent /bye) & swaylock -f -c 0x000000"'

input type:keyboard {
    xkb_layout us
    xkb_options compose:ralt
}

# Auto-hide cursor (replaces unclutter)
seat * hide_cursor 8000
output * bg ~/Pictures/bg.jpg  fill

exec --no-startup-id $HOME/dotfiles/scripts/i3scripts/dockland.sh "init" &
exec --no-startup-id ~/.config/sway/sway-defaults &
exec --no-startup-id xdg-user-dir ~/.config/user-dirs.dirs &
exec --no-startup-id redshift -c ~/.config/redshift.conf &
exec gpg-connect-agent updatestartuptty /bye &
exec dunst &
exec_always {
    systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
    dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
}
